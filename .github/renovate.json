{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "prConcurrentLimit": 3,
  "schedule": ["before 6am on monday"],
  "separateMajorMinor": true,
  "packageRules": [
    {
      "description": "Auto-merge patch updates for dev-dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "description": "Group security tools (Checkov & Reviewdog)",
      "matchFileNames": ["Dockerfile"],
      "matchPackagePatterns": ["checkov", "reviewdog"],
      "groupName": "security-tools",
      "labels": ["dependencies", "security-tools"],
      "semanticCommitType": "feat",
      "semanticCommitScope": "deps"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ENV CHECKOV_VERSION=(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "bridgecrewio/checkov",
      "extractVersionTemplate": "^(?<version>.*)$"
    },
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ENV REVIEWDOG_VERSION=(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "reviewdog/reviewdog",
      "extractVersionTemplate": "^(?<version>.*)$"
    }
  ]
}